<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="site-text">Add a Movie Review</h1>
      <br>
        <select class="form-select" id="movie-id">
          <option selected>Select Movie</option>
          {{#each movies as |movie|}}
          <option value="{{movie.id}}">{{movie.name}}</option>
          {{/each}}
        </select>
      <br>
      <label for="rating-value" class="form-label site-text">Rating</label>
      <select class="form-select" id="rating-value" aria-label="Select Movie Rating">
        <option selected>Select Movie Rating</option>
        <option value="5">★★★★★</option>
        <option value="4">★★★★</option>
        <option value="3">★★★</option>
        <option value="2">★★</option>
        <option value="1">★</option>
      </select>
      <br>
      <div class="mb-3">
        <label for="review-descr" class="form-label site-text">Review</label>
        <textarea class="form-control" id="review-descr" placeholder="Enter in Review Here..." rows="3"></textarea>
      </div>
      <br>
      <h6 id="success" class="site-text hide">Review Saved</h6>
      <br>
      <button class="btn btn-outline-light" id="add-review" type="button">Add Movie Review</button>
    </div>
  </div>
</div>

<script src="./js/review.js"></script>
