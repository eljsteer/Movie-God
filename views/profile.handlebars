<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{username}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Add a Movie: </h3>
        <form class="form new-project-form">
            <div class="form-group">
                <label for="movie-name">Movie Name: </label>
                <input type="text" name="movie-name" id="movie-name">
            </div>
        </form>
    </div>
    <div>
        {{#if movies.length}}
        <div class="col-md-6 project-list">
            <h3>Movies: </h3>
        {{#each movies as |movie|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/project/{{movies.id}}">{{movies.name}}</a></h4>
            </div>
        </div>
        {{/each}}
        </div>
        {{/if}}
    </div>
</div>